# Backend environment variables
# Use this file as a template. Do NOT commit real secrets.

# Preferred single DATABASE_URL (Render, Supabase, Neon, etc.)
# Example: postgres://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=

# If DATABASE_URL is not set, the app falls back to these:
DB_HOST=localhost
DB_NAME=virtual_patient_recruitment
DB_USER=postgres
DB_PASSWORD=
DB_PORT=5432

# CORS: set your frontend deployed origin to enable credentials securely
# e.g., https://your-frontend.vercel.app
FRONTEND_ORIGIN=

# Flask port for local/dev; Render provides PORT automatically
PORT=5000